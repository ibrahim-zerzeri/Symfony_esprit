<!DOCTYPE html>
<html>
<head>
    <title>Add Reader</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add New Reader</h1>
        
        {{ form_start(formulaire, {'attr': {'class': 'form-horizontal'} }) }}
        
        <div class="form-group mb-3">
            {{ form_label(formulaire.username, 'Username', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formulaire.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(formulaire.username) }}
        </div>
        
        {{ form_widget(formulaire.Add) }}
        
        {{ form_end(formulaire) }}
        
        <a href="{{ path('showAllReaders') }}" class="btn btn-secondary mt-3">Back to Readers List</a>
    </div>
</body>
</html>