<!DOCTYPE html>
<html>
<head>
    <title>All Readers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">All Readers</h1>
        
        <div class="mb-3">
            <a href="{{ path('addReaderForm') }}" class="btn btn-success">Add New Reader</a>
            <a href="{{ path('showAllBooks') }}" class="btn btn-secondary">Back to Books table</a>
        </div>
        
        {% if list is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Books Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reader in list %}
                        <tr>
                            <td>{{ reader.id }}</td>
                            <td>{{ reader.username }}</td>
                            <td>
                                <span class="badge bg-primary">{{ reader.books|length }}</span>
                            </td>
                            <td>
                                <a href="{{ path('deleteReader', {'id': reader.id}) }}" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Are you sure you want to delete this reader?')">Delete</a>
                                <a href="{{ path('showReaderDetails', {'id': reader.id}) }}" class="btn btn-info btn-sm">Show</a>
                                <a href="{{ path('updateReader', {'id': reader.id}) }}" class="btn btn-warning btn-sm">Update</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <p class="text-muted">Total readers: {{ list|length }}</p>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                No readers found in the database.
            </div>
        {% endif %}
        
        <a href="{{ path('app_reader') }}" class="btn btn-primary mt-3">Back to Reader Home</a>
    </div>
</body>
</html>