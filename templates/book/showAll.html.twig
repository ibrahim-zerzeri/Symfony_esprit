<!DOCTYPE html>
<html>
<head>
    <title>All Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">All Books</h1>
        
        <div class="mb-3">
            <a href="{{ path('addBookForm') }}" class="btn btn-success">Add New Book</a>
            <a href="{{ path('showAllAuthors') }}" class="btn btn-secondary">Back to Authors table</a>
            <a href="{{ path('showAllReaders') }}" class="btn btn-message">Back to Readers table</a>
             <a href="{{ path('book_stats') }}" class="btn btn-danger">Book stats</a>
        </div>
        
        {% if list is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Publication Date</th>
                            <th>Category</th>
                            <th>Enabled</th>
                            <th>Author</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in list %}
                        <tr>
                            <td>{{ book.id }}</td>
                            <td>{{ book.title }}</td>
                            <td>{{ book.publicationDate|date('Y-m-d') }}</td>
                            <td>
                                <span class="badge bg-info text-dark">{{ book.category }}</span>
                            </td>
                            <td>
                                <span class="badge {{ book.enabled ? 'bg-success' : 'bg-danger' }}">
                                    {{ book.enabled ? 'Yes' : 'No' }}
                                </span>
                            </td>
                            <td>{{ book.author ? book.author.username : 'No Author' }}</td>
                            <td>
                                <a href="{{ path('deleteBook', {'id': book.id}) }}" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Are you sure you want to delete this book?')">Delete</a>
                                <a href="{{ path('showBookDetails', {'id': book.id}) }}" class="btn btn-info btn-sm">Show</a>
                                <a href="{{ path('updateBook', {'id': book.id}) }}" class="btn btn-warning btn-sm">Update</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <p class="text-muted">Total books: {{ list|length }}</p>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                No books found in the database.
            </div>
        {% endif %}
        
        <a href="{{ path('app_book') }}" class="btn btn-primary mt-3">Back to Book Home</a>
    </div>
</body>
</html>