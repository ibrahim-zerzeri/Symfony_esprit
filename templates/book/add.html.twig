<!DOCTYPE html>
<html>
<head>
    <title>Add Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add New Book</h1>
        
        <div class="card">
            <div class="card-body">
                {{ form_start(formulaire) }}
                <div class="mb-3">
                    {{ form_label(formulaire.title) }}
                    {{ form_widget(formulaire.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(formulaire.publicationDate) }}
                    {{ form_widget(formulaire.publicationDate, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(formulaire.category) }}
                    {{ form_widget(formulaire.category, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3 form-check">
                    {{ form_widget(formulaire.enabled, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(formulaire.enabled, null, {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(formulaire.author) }}
                    {{ form_widget(formulaire.author, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_widget(formulaire.Add, {'attr': {'class': 'btn btn-success'}}) }}
                </div>
                {{ form_end(formulaire) }}
            </div>
        </div>
        
        <a href="{{ path('showAllBooks') }}" class="btn btn-primary mt-3">Back to Books List</a>
    </div>
</body>
</html>