<!DOCTYPE html>
<html>
<head>
    <title>All Authors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">All Authors</h1>
        
        {% if list is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for author in list %}
                        <tr>
                            <td>{{ author.id }}</td>
                            <td>{{ author.username }}</td>
                            <td>{{ author.email }}</td>
                           <td>
 <a href="{{path('deleteAuthor',{'id':author.id})}}">Delete</a> {#or URL #}
 <a href="{{path('showDetails',{'id':author.id})}}">Show</a>
    <a href="{{ path('updateAuthor', {'id': author.id}) }}">Update</a>
</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <p class="text-muted">Total authors: {{ list|length }}</p>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                No authors found in the database.
            </div>
        {% endif %}
        
        <a href="{{ path('app_home') }}" class="btn btn-primary mt-3">Back to Home</a>
          <a href="{{ path('showAllBooks') }}" class="btn btn-secondary mt-3">Back to book table</a>
    </div>
</body>
</html>