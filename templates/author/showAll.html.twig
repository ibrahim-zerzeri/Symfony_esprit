<!DOCTYPE html>
<html>
<head>
    <title>All Authors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4 text-center">All Authors</h1>

    {# üîé Search Form #}
    <form method="get" action="{{ path('showAllAuthors') }}" class="row g-3 mb-4 justify-content-center">
        <div class="col-auto">
            <label for="min" class="form-label">Min Number</label>
            <input type="number" class="form-control" name="min" id="min" value="{{ min }}">
        </div>
        <div class="col-auto">
            <label for="max" class="form-label">Max Number</label>
            <input type="number" class="form-control" name="max" id="max" value="{{ max }}">
        </div>
        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    {# üóëÔ∏è Delete authors with 0 books #}
    <div class="mb-3 text-end">
      <a href="{{ path('addForm') }}" class="btn btn-success text-begin">Add New Author</a>
        <a href="{{ path('delete_zero_authors') }}" class="btn btn-danger"
           onclick="return confirm('Are you sure you want to delete all authors with 0 books?')">
            Delete authors with 0 books
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {% if list is not empty %}
        <div class="table-responsive">
        <h2 class="text-success mb-4">üòä {{ quote }}</h2>
            <table class="table table-striped table-bordered align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Number of books</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for author in list %}
                    <tr>
                        <td>{{ author.id }}</td>
                        <td>{{ author.username }}</td>
                        <td>{{ author.email }}</td>
                        <td><span class="badge bg-info text-dark">{{ author.nbBooks }}</span></td>
                        <td>
                            <a href="{{ path('updateAuthor', {'id': author.id}) }}" class="text-decoration-none text-primary">Edit</a> |
                            <a href="{{ path('deleteAuthor', {'id': author.id}) }}" class="text-decoration-none text-danger">Delete</a> |
                            <a href="{{ path('showDetails', {'id': author.id}) }}" class="text-decoration-none text-success">Show</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <p class="text-muted mt-3">Total authors: {{ list|length }}</p>
    {% else %}
        <div class="alert alert-warning text-center">No authors found.</div>
    {% endif %}

    <div class="d-flex gap-2 mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Back to Home</a>
        <a href="{{ path('showAllBooks') }}" class="btn btn-outline-primary">Back to Book Table</a>
    </div>
</div>
</body>
</html>
